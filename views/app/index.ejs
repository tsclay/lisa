<button class="btn btn-primary" onclick="window.location.href='/app/new'">
  <i class="far fa-plus-square fa-2x"></i>
</button>
<div class="container">
  <ul class="list-group list-group-flush">
    <% for (let entry of entries) { %>
    <li
      class="list-group-item"
      role="button"
      data-toggle="collapse"
      aria-expanded="false"
      aria-controls="entry-<%= entry.id %>"
    >
      <a class="text-decoration-none text-reset"
        ><%= entry.name.lastName %>, <%= entry.name.firstName %></a
      >
      <div class="collapse" id="entry-<%= entry.id %>">
        <div class="btn-group">
          <button
            type="button"
            class="btn btn-outline-secondary btn-sm"
            onclick="window.location.href='/app/<%= entry.id %>'"
          >
            <i class="far fa-eye"></i>
          </button>
          <button
            type="button"
            class="btn btn-outline-secondary btn-sm"
            onclick="window.location.href='/app/<%= entry.id %>/edit'"
          >
            <i class="far fa-edit"></i>
          </button>
          <button
            form="<%= entry.id %>"
            type="submit"
            class="btn btn-outline-secondary btn-sm"
          >
            <i class="far fa-trash-alt"></i>
          </button>
          <form
            action="/app/<%= entry.id %>?_method=DELETE"
            method="POST"
            id="<%= entry.id %>"
          ></form>
        </div>
      </div>
    </li>
    <% } %>
  </ul>
</div>
