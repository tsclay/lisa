<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body>
    <h1>Add page</h1>
    <div class="container">
      <form action="/app" method="POST">
        <div class="form-group">
          <div class="row">
            <div class="col">
              <div class="form-group">
                <label for="reservation-id">RESERVATION ID</label>
                <input
                  class="form-control"
                  type="text"
                  name="reservationID"
                  id="reservation-id"
                />
              </div>
            </div>
            <div class="col">
              <label for="last-name">LAST NAME</label>
              <input
                class="form-control"
                type="text"
                name="name[lastName]"
                id="last-name"
              />
            </div>
            <div class="col">
              <div class="form-group">
                <label for="first-name">FIRST NAME</label>
                <input
                  class="form-control"
                  type="text"
                  name="name[firstName]"
                  id="first-name"
                />
              </div>
            </div>
            <div class="col">
              <div class="form-group">
                <label for="recent-stay">RECENT STAY</label>
                <input
                  class="form-control"
                  type="date"
                  name="recentStay"
                  id="recent-stay"
                />
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col">
              <div class="form-group">
                <label for="accomodation-property">PROPERTY</label>
                <input
                  type="text"
                  name="accomodation[property]"
                  id="accomodation-property"
                  class="form-control"
                />
              </div>
            </div>
            <div class="col">
              <div class="form-group">
                <label for="accomodation-room">ROOM NUMBER</label>
                <input
                  type="number"
                  name="accomodation[roomNumber]"
                  id="accomodation-room"
                  class="form-control"
                />
              </div>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="comments">COMMENTS</label>
          <textarea
            rows="5"
            class="form-control"
            type="text"
            name="comments"
            id="comments"
          ></textarea>
        </div>
        <button class="btn btn-primary" type="submit">ENTER</button>
      </form>
      <button class="btn btn-primary" onclick="window.location.href='/app'">
        RETURN
      </button>
    </div>
  </body>
</html>
