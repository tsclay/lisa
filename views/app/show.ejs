<h1>Show page</h1>
<div class="container">
  <div class="d-flex flex-wrap flex-column justify-content-start">
    <p><%= foundGuest.name.lastName %>, <%= foundGuest.name.firstName %></p>
    <p>Last stay: <%= foundGuest.recentStay %></p>
    <p>Reservation ID: <%= foundGuest.reservationID %></p>
  </div>
  <div class="d-flex flex-wrap flex-column justify-content-start">
    <p>
      Stayed in room <%= foundGuest.accomodation.roomNumber %> at <%=
      foundGuest.accomodation.property %>
    </p>
  </div>
  <button
    class="btn btn-primary"
    onclick="window.location.href='/app/<%= foundGuest.id %>/edit'"
  >
    EDIT
  </button>
  <button class="btn btn-primary" onclick="window.location.href='/app'">
    RETURN
  </button>
  <div class="mt-5">
    <!-- prettier-ignore -->
    <% const currentDate = moment().utcOffset(timeOffset) %> 
    <% let testDate = currentDate %>
    <!-- prettier-ignore -->
    <% for (let i = 0; i < foundGuest.posts.length; i++) { %>
    <!-- prettier-ignore -->
    <% const postDate = moment(foundGuest.posts[i].createdAt).utcOffset(timeOffset) %>
    <!-- prettier-ignore -->
    <% if (!moment(postDate).isSame(testDate, 'day')) { %>
      <% if (moment(postDate).isSame(currentDate, 'day')) { %>
    <div class="text-center">Today</div>
    <!-- prettier-ignore -->
    <% testDate = postDate %> 
    <% } else { %>
    <div class="text-center">
      <!--prettier-ignore -->
      <%=
      moment(foundGuest.posts[i].createdAt).utcOffset(timeOffset).format('MMMM D') %>
    </div>
    <% testDate = postDate %>
    <!---->
    <% } %>
    <!---->
    <% } %>
    <div class="card d-flex flex-row pb-3">
      <div style="width: 8%;">
        <svg
          class="mt-1 ml-1"
          width="40px"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 496 512"
        >
          <path
            d="M248 8C111 8 0 119 0 256s111 248 248 248 248-111 248-248S385 8 248 8zm0 96c48.6 0 88 39.4 88 88s-39.4 88-88 88-88-39.4-88-88 39.4-88 88-88zm0 344c-58.7 0-111.3-26.6-146.5-68.2 18.8-35.4 55.6-59.8 98.5-59.8 2.4 0 4.8.4 7.1 1.1 13 4.2 26.6 6.9 40.9 6.9 14.3 0 28-2.7 40.9-6.9 2.3-.7 4.7-1.1 7.1-1.1 42.9 0 79.7 24.4 98.5 59.8C359.3 421.4 306.7 448 248 448z"
          />
        </svg>
      </div>
      <div style="width: 90%;">
        <div class="d-flex flex-row mt-1">
          <h6 class="card-title">
            <%= foundGuest.posts[i].author.name %>
          </h6>
          <h6 class="ml-2">
            <!-- prettier-ignore-->
            <small class="text-muted">
              <%= moment(foundGuest.posts[i].createdAt).utcOffset(timeOffset).format('h:mm a') %>
              </small>
          </h6>
        </div>
        <p class="card-text">
          <%= foundGuest.posts[i].content %>
        </p>
      </div>
    </div>
    <% } %>
  </div>
  <div class="card">
    <div class="card-body">
      <form action="/app/<%= foundGuest.id %>/newpost" method="POST">
        <textarea
          name="content"
          id="user-comment"
          cols="60"
          rows="3"
          placeholder="Share what you think!"
        ></textarea>
        <button type="submit" class="btn btn-primary btn-sm">POST</button>
      </form>
    </div>
  </div>
</div>
